{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "strict": true,
    "outDir": "dist",
    "newLine": "lf",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
